<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:orientation="vertical"
    android:background="#000000"
    tools:context="com.mulkearn.kevin.sitecolorgrabber.MainActivity">

    <TextView
        android:id="@+id/titleText"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center_horizontal|center_vertical"
        android:text="@string/app_name"
        android:textColor="#FFD500"
        android:textSize="40sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="5dp"
        android:layout_weight="1"
        android:background="#FFD500"
        android:gravity="center_horizontal|center_vertical"
        android:onClick="startSearchActivity"
        android:text="Search"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#000000"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="5dp"
        android:layout_weight="1"
        android:background="#FFD500"
        android:gravity="center_horizontal|center_vertical"
        android:onClick="startSavedActivity"
        android:text="Saved Colors"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#000000"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="5dp"
        android:layout_weight="1"
        android:background="#FFD500"
        android:gravity="center_horizontal|center_vertical"
        android:onClick="startAboutActivity"
        android:text="About"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#000000"/>

</LinearLayout>
