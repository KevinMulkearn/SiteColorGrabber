<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/mainView">

    <ProgressBar
        android:id="@+id/loadingCircle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:indeterminate="true" />

    <ScrollView
        android:id="@+id/pageScrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_above="@+id/hexText"
        android:layout_margin="5dp">

        <WebView
            android:id="@+id/websiteView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </ScrollView>


    <!--
    <WebView
        android:id="@+id/websiteView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_above="@+id/hexText"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="30dp"/>
-->


    <TextView
        android:id="@+id/colorDisplay"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginStart="5dp"
        android:background="#000000"/>

    <TextView
        android:id="@+id/hexText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/rgbText"
        android:layout_marginBottom="5dp"
        android:layout_toRightOf="@+id/colorDisplay"
        android:layout_toEndOf="@+id/colorDisplay"
        android:layout_marginStart="5dp"
        android:layout_marginLeft="5dp"
        android:text="Hex:#000000"
        android:textSize="15sp"
        android:textColor="#000000" />

    <TextView
        android:id="@+id/rgbText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/hsvText"
        android:layout_marginBottom="5dp"
        android:layout_toEndOf="@+id/colorDisplay"
        android:layout_toRightOf="@+id/colorDisplay"
        android:layout_marginStart="5dp"
        android:layout_marginLeft="5dp"
        android:text="rgb(0, 0, 0)"
        android:textSize="15sp"
        android:textColor="#000000" />

    <TextView
        android:id="@+id/hsvText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/colorDisplay"
        android:layout_toRightOf="@+id/colorDisplay"
        android:layout_marginLeft="5dp"
        android:layout_marginStart="5dp"
        android:layout_marginBottom="5dp"
        android:text="hsv(0Â°, 0%, 0%)"
        android:textSize="15sp"
        android:textColor="#000000" />

</RelativeLayout>